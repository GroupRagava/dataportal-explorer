block filterWindow
	.filterbox.round
		#top-filterZone
			.title-window.gradient
				h4(id='addSearchFilter') Filtro de búsqueda
			.minimize-maximize-button
				span(class='caret')
		#filtersContainer
			#explorerFiltersAndEditor
				#filterEditorPane
					#filters
						.filter
							span(id='subject', class='type')
								select(name='c[0].s', id='newFilterSubject')
									optgroup(label='Taxonomía')
										option(value='0', selected='true') Nombre Científico
										option(value='31') Nombre común
										option(value='20') Clasificación
										option(value='30') Tipo de Status
									optgroup(label='Geoespacial')
										option(value='5') País
										option(value='38') Departamento
										option(value='19') Condiciones de selección
										option(value='1') Latitud
										option(value='2') Longitud
										option(value='34') Altitud
										option(value='35') Profundidad
										option(value='28') Estado de las coordenadas
										option(value='29') Problemas de coordenadas
										option(value='36') Área protegida
									optgroup(label='Recursos de datos')
										option(value='25') Publicador de datos
										option(value='24') Recurso de datos
										option(value='32') País que alberga el dato
									optgroup(label='Otros Detalles')
										option(value='4') Fecha de la cita
										option(value='33') Rango de años
										option(value='21') Año
										option(value='22') Mes
										option(value='12') Código de la institución
										option(value='13') Código de la colección
										option(value='14') Número de catálogo
										option(value='17') Base del registro
										option(value='37') URL de la imagen
							span(id='predicate', class='predicate')
								select(name='c[0].p', id='newFilterPredicate')
									option(value='0') es
							span(id='newFilterValue', class='value')
								input(name='c[0].o', type='text', id='statesInput', class='input-medium search-query', autocomplete='off', data-provide='typeahead', data-items='10', data-source='[&quot;Alabama&quot;,&quot;Alaska&quot;,&quot;Arizona&quot;,&quot;Arkansas&quot;,&quot;California&quot;,&quot;Colorado&quot;,&quot;Connecticut&quot;,&quot;Delaware&quot;,&quot;Florida&quot;,&quot;Georgia&quot;,&quot;Hawaii&quot;,&quot;Idaho&quot;,&quot;Illinois&quot;,&quot;Indiana&quot;,&quot;Iowa&quot;,&quot;Kansas&quot;,&quot;Kentucky&quot;,&quot;Louisiana&quot;,&quot;Maine&quot;,&quot;Maryland&quot;,&quot;Massachusetts&quot;,&quot;Michigan&quot;,&quot;Minnesota&quot;,&quot;Mississippi&quot;,&quot;Missouri&quot;,&quot;Montana&quot;,&quot;Nebraska&quot;,&quot;Nevada&quot;,&quot;New Hampshire&quot;,&quot;New Jersey&quot;,&quot;New Mexico&quot;,&quot;New York&quot;,&quot;North Dakota&quot;,&quot;North Carolina&quot;,&quot;Ohio&quot;,&quot;Oklahoma&quot;,&quot;Oregon&quot;,&quot;Pennsylvania&quot;,&quot;Rhode Island&quot;,&quot;South Carolina&quot;,&quot;South Dakota&quot;,&quot;Tennessee&quot;,&quot;Texas&quot;,&quot;Utah&quot;,&quot;Vermont&quot;,&quot;Virginia&quot;,&quot;Washington&quot;,&quot;West Virginia&quot;,&quot;Wisconsin&quot;,&quot;Wyoming&quot;]')
							span(class='submitFilter')
								button(class='btn btn-small btn-add-filter', type='button') Agregar filtro
					#selectedFilterHelp
						.taxonomyFilterHelp
							p Escriba un nombre científico y pulse en Agregar filtro.
							p Este filtro devolverá cualquier registro que posea un nombre que concuerde con el identificador dado del organismo, sin importar como está clasificado el organismo.
					#filterWizard
				#constructedFiltersPane
					#constructedFilters
						h4(id='currentSearch') Su búsqueda actual
						p(class='emptySearch') Los filtros pueden ser eliminados dando clic en el signo de "resta".
						ul(class='taxonomy')
							li(class='alteredFilter') Nombre Científico es Cabirus
								a(href='', title='Quitar este filtro')
									img(alt='Quitar este filtro', src='/images/grey_minus.png')
						button(class='btn btn-small btn-add-filter', type='button') Búsqueda